{
  "name": "thinksync",
  "version": "1.0.0",
  "description": "Real-time collaborative whiteboard and mind mapping platform",
  "scripts": {
    "install-server": "cd server && npm install --production",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build-client": "cd client && npm run build",
    "build": "npm run install-all && npm run build-client",
    "start": "cd server && npm start",
    "dev": "cd server && npm run dev",
    "postinstall": "npm run install-all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alphabet28/ThinkSync"
  },
  "keywords": [
    "whiteboard",
    "mindmap",
    "collaboration",
    "realtime",
    "mern",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
